<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

        <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/recipeimage"
        android:layout_below="@+id/recipetitle"
        android:layout_centerHorizontal="true"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipetitle"
        android:layout_marginLeft="10dp"
        android:textSize="30sp"
        />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipepublisher"
        android:layout_below="@+id/recipeimage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recipesourceurl"
            android:layout_below="@+id/recipepublisher"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTS:"
            android:id="@+id/textIngredients"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/recipesourceurl"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/ingredients"
        android:layout_below="@+id/textIngredients"
            android:layout_marginLeft="10dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ingredients">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD TO FAVOURITES"
                android:id="@+id/favouritesButton"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/groceriesButton"
                android:text="ADD TO GROCERIES"
                android:layout_weight="1"/>
        </LinearLayout>






    </RelativeLayout>
</ScrollView>