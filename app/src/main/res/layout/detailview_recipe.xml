<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:background="@drawable/blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipetitle"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/background_floating_material_light"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/recipetitle"
            android:layout_marginTop="10dp"
            android:id="@+id/divider1"/>

        <ImageView
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:id="@+id/recipeimage"
        android:scaleType="fitXY"
        android:layout_below="@+id/divider1"
        android:layout_marginLeft="20dp"
            android:padding="5dp"
        />

        <!--<Button-->
            <!--android:layout_width="135dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="ADD TO FAVOURITES"-->
                <!--android:id="@+id/favouritesButton"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_toRightOf="@+id/recipeimage"-->
                <!--android:layout_below="@+id/divider1"-->
            <!--android:layout_marginTop="70dp"-->
            <!--android:visibility="gone"/>-->

        <ToggleButton
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:textOff="ADD TO FAVOURITES"
            android:textOn="REMOVE FROM FAVOURITES"
            android:id="@+id/favouritesButton"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/recipeimage"
            android:layout_below="@+id/divider1"
            android:layout_marginTop="70dp"

            android:visibility="gone"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/recipeimage"
            android:id="@+id/divider2"/>


        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_below="@id/recipeimage"
            android:indeterminate="true"
            android:layout_centerHorizontal="true"
           />





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/publisher"
            android:layout_below="@+id/divider2"
            android:layout_marginLeft="10dp"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUBLISHER:   "
                android:textSize="12sp"
                android:textColor="#ffffffff"
                android:id="@+id/textPublisher"
                android:visibility="gone"
               />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recipepublisher"
                    android:visibility="gone"
                    android:textColor="#ffffffff"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sourceurl"
            android:layout_below="@+id/publisher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOURCE URL:   "
                android:textSize="12sp"
                android:id="@+id/textSource"
                android:textColor="#ffffffff"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recipesourceurl"
                android:visibility="gone"
                android:clickable="true"
                android:textColor="#ff2a6aff"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/sourceurl"
            android:id="@+id/divider4"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGREDIENTS:"
                android:id="@+id/textIngredients"
                android:textSize="15sp"
                android:textColor="#ffffffff"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/divider4"
                android:visibility="gone"/>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/ingredients"
        android:layout_below="@+id/textIngredients"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffffff"
        android:visibility="gone"
        />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/ingredients"
            android:id="@+id/divider5"/>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ingredients"
            android:id="@+id/buttonLayout"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/groceriesButton"
                android:text="ADD TO GROCERIES"
                android:visibility="gone"
                android:layout_weight="1"
                android:background="@drawable/button"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/plannerButton"
                android:background="@drawable/button"
                android:text="ADD TO PLANNER"
                android:layout_weight="1"
                android:visibility="gone"/>

        </LinearLayout>






    </RelativeLayout>
</ScrollView>