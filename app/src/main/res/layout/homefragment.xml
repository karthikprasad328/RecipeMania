<RelativeLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent">
    <com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parallaxScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:parallax_factor="1.9"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/homefinal"
                android:gravity="center"
                android:textSize="50sp"
                tools:ignore="HardcodedText" />
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!-->-->
            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/cardList"-->
            <!--android:scrollbars="vertical"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->

            <!--/>-->
            <!--</LinearLayout>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to RECIPEMANIA, your one-stop destination for recipes.\n\nHave you ever felt like you don't know what to cook and you want to try something different? You can search for Popular Recipes and see a lot of them\n\nHave you ever felt like you have some Ingredients in your fridge but you don't know what to cook with them? You can search for recipes based on names or ingredients\n\Any recipe you like can be saved to My Favourites to be seen later.\n\nYou can add items to your grocery list and can view them later when you go to the grocery store.\n\n Have some friends or family coming over? You can create calendar events from within the app by selecting Add to Planner.\n"
                android:textSize="22sp"
                android:background="@android:color/white"
                android:padding="5dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>


    </com.nirhart.parallaxscroll.views.ParallaxScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        >
    </com.google.android.gms.ads.AdView>
</RelativeLayout>